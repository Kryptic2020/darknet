<div class="jumbotron mt-5">
  <h3 class="display-5">Dashboard</h3>
  <p class="lead"></p>
  <hr class="my-4">
</div>
<div id="message-box" class="rounded  col-3 grey container p-3" >
<% @message_list.each do |item| %>
<div class="col-12 rounded p-3 bg-light">
  <p class="text-truncate col"><%= item.user.username%></p>
  <p class="text-truncate col"><%= item.product.title%></p>
  <p class="text-truncate col"><%= item.created_at%></p>
</div>
<%= link_to get_message_path(item.id) do %>
  <button class=" mt-3 white border-light mx-2 rounded">
    <i class="material-icons float-left align-middle ">question_answer</i>
    <small>Answer Buyer</small>              
  </button>
  <%end%> 
  <%end%> 
</div>