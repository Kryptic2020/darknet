<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4">Product list!</h1>
  <p class="lead"></p>
  <hr class="my-4">
  
  <% @products.each do |product| %>
    <div class="row mt-5">
      <div class="col ">
        <h5 class="row">Title</h5>
        <p class="row"><%= product.title %></p>
      </div>

      <div class="col ">
        <h5 class="row">Price</h5>
        <p class="row"><%= number_with_precision(product.price, precision: 2) %></p>
      </div>

      <div class="col ">
        <h5 class="row">Available</h5>
        <p class="row"><%= product.quantity_available %></p>
      </div>

      <div class="col ">
        <h5 class="row">Sold</h5>
        <p class="row"><%= product.sold %></p>
      </div>

      <div class="col ">
        <h5 class="row">Category</h5>
        <p class="row"><%= product.category.name %></p>
      </div>

      <div class="col">      
        <%= link_to 'See', product, class:"btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_product_path(product), class:"btn btn-warning btn-sm" %>
        <%= link_to 'Del', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %>        
      </div>  
    </div>    
  <% end %>
</div>
<br>

<%= link_to 'New Product', new_product_path, class:"btn btn-info" %>
