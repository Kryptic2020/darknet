<div class="container" style="max-width: 36rem;">
  <div class="jumbotron">
    <h3 class="display-5">MyCart Item!</h3>
    <hr class="my-3">
    <div class="d-flex justify-content-between">
      <%= link_to message_path(@product.id) do %>
        <button class="bg-info border-info p-1 mx-2 rounded">
          <i class="material-icons float-left align-middle ">question_answer</i>
          <small>Ask Seller</small>              
        </button>
      <%end%> 
      <%= link_to "Back" , cart_path(@cart_item.cart_id), class:" bg-info border-info px-3 py-1 mx-2 rounded t-black" %>
    </div>
  </div>
  <div class="card m-auto mb-5">
    <%= image_tag @product.picture, class:"card-img-top"%>
    <div class="card-body">
      <h5 class="card-title">
        <%= @product.title%>
      </h5>
      <p class="card-text">
        <%= @product.description%>
      </p>
      <p class="card-text t-blue">Price AUD$ 
        <%= number_with_precision(@product.price, precision: 2)%>
      </p>
      <p class="card-text">Condition: 
        <%= @product.condition.name%>
      </p>
      <p class="card-text">Shipped From 
        <%= @product.shipped_from%> - Free Shipping
      </p>
      <p class="card-text">Delivery estimated 
        <%= @product.delivery_estimated%> days
      </p>        
      <p class="card-text">Quantity 
        <%= @cart_item.quantity%> 
      </p>        
      <p class="card-text t-red">Sold 
        <%= @product.sold%>
      </p>
      <p class="card-text t-greem">Available 
        <%= @product.quantity_available%>
      </p>
      <input type="hidden" name="product_id" value="<%= @product.id %>">
      <p class="card-text">
        <small class="text-muted">Last updated 
          <%= @product.created_at%>
        </small>
      </p>
    </div>
  </div> 
</div>